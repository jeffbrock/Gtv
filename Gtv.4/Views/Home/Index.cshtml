@model gtv.ViewModels.Home

<div class="row justify-content-md-center">
    <div class="col-12">
        <div style="padding-left:10px; padding-right:10px;">
            <div class="row">
                <div id="myCarousel" class="col-sm-12  col-md-12 carousel slide" data-ride="carousel" data-interval="6000">
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < Model.Carousels.Count(); i++)
                        {
                            <li data-target="#myCarousel" data-slide-to="@i" class="@(i==0 ? "active" : "")"></li>
                        }
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        @foreach (var carousel in Model.Carousels)
                        {
                            <div class="carousel-item @(carousel.TripTag == Model.Carousels.ToList()[0].TripTag ? "active" : "")">
                                <a asp-controller="trips" asp-action="@carousel.TripTag">
                                    <img src="~/images/trips/@carousel.TripTag/@carousel.Image" alt="@carousel.Title" class="img-fluid" />
                                    <div class="carousel-caption" role="option">
                                        <p>@carousel.Title</p>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        <hr />
        <div style="text-align:center;font-size:1.75em;">
            recent posts
        </div>
        <br />

        <div class="row" style="text-align:center;align-items:center;padding-left:20px;padding-right:20px;">
            @foreach (var tripitem in Model.TripItems)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <a style="text-decoration:none;" href="~/trips/@tripitem.TripTag/@tripitem.Tag">

                        <figure>
                            <div class="hovereffect">
                                <img src="~/images/trips/@tripitem.TripTag/@tripitem.Tag/h_@tripitem.HeaderImage" alt="@tripitem.Title" class="img-fluid" />
                            </div>
                            <figcaption class="tripitem-link">
                                <div style="font-size:.5em;">&nbsp;</div>
                                <div style="font-size:1.5em;">@tripitem.Title</div>
                                <div style="font-size:1em;">@tripitem.TripTitle | @tripitem.PublishDate.ToLocalTime().ToString("MMMM d, yyyy")</div>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>

    </div>
</div>
